@model Customer
@{
    ViewData["Title"] = "Select Customer";

}

<div class="frm-wrapper w-75">
        <div class="table-title">
        <div class="row">
            <div class="col-sm-6">
                <h2>@ViewData["Title"]</h2>
            </div>

        </div>
    </div>
    <form asp-action="Index" asp-controller="Registration" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        
        <select class="custom-select" asp-for="FirstName" name="custId" required>
            <option value="">Please select a Customer</option>
            @foreach(var customer in ViewBag.Customer)
            {
                <option value="@customer.CustomerId" >@customer.FirstName @customer.LastName</option>
            }
        </select> 
        
    </div>
    
    <button type="submit" class="btn btn-primary">Select</button>
</form>
</div>
